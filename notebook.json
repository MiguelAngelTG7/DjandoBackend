{
  "swagger": "2.0",
  "info": {
    "title": "Notebook",
    "description": "Esta aplicación permite a los usuarios gestionar notas personales de manera eficiente. Los usuarios pueden registrarse, iniciar sesión y realizar todas las operaciones CRUD (Crear, Leer, Actualizar, Eliminar) sobre sus notas.",
    "version": "0.1"
  },
  "host": "127.0.0.1:8000",
  "schemes": [
    "http"
  ],
  "basePath": "/api",
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "Introduce el token en el formato: Bearer <tu_token>"
    }
  },
  "paths": {
    "/notes/": {
      "get": {
        "operationId": "notes_list",
        "description": "Obtiene la lista de notas",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Lista de notas obtenida con éxito",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Note"
              }
            }
          }
        },
        "tags": [
          "notes"
        ],
        "security": [
          {
            "Bearer": []
          }
        ]
      },
      "post": {
        "operationId": "notes_create",
        "description": "Crea una nueva nota",
        "parameters": [
          {
            "name": "data",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Note"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Nota creada con éxito",
            "schema": {
              "$ref": "#/definitions/Note"
            }
          }
        },
        "tags": [
          "notes"
        ],
        "security": [
          {
            "Bearer": []
          }
        ]
      }
    },
    "/notes/delete/{id}/": {
      "delete": {
        "operationId": "notes_delete_delete",
        "description": "Elimina una nota por ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "Nota eliminada con éxito"
          }
        },
        "tags": [
          "notes"
        ],
        "security": [
          {
            "Bearer": []
          }
        ]
      }
    },
    "/notes/update/{id}/": {
      "put": {
        "operationId": "notes_update_update",
        "description": "Actualiza una nota completamente",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "data",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Note"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Nota actualizada con éxito",
            "schema": {
              "$ref": "#/definitions/Note"
            }
          }
        },
        "tags": [
          "notes"
        ],
        "security": [
          {
            "Bearer": []
          }
        ]
      },
      "patch": {
        "operationId": "notes_update_partial_update",
        "description": "Actualiza parcialmente una nota",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "data",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Note"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Nota actualizada parcialmente con éxito",
            "schema": {
              "$ref": "#/definitions/Note"
            }
          }
        },
        "tags": [
          "notes"
        ],
        "security": [
          {
            "Bearer": []
          }
        ]
      }
    },
    "/token/": {
      "post": {
        "operationId": "token_create",
        "description": "Genera un token de acceso y refresh",
        "parameters": [
          {
            "name": "data",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/TokenObtainPair"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Token generado exitosamente",
            "schema": {
              "$ref": "#/definitions/TokenObtainPair"
            }
          }
        },
        "tags": [
          "token"
        ]
      }
    },
    "/token/refresh/": {
      "post": {
        "operationId": "token_refresh_create",
        "description": "Refresca un token de acceso usando el refresh token",
        "parameters": [
          {
            "name": "data",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/TokenRefresh"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Token de acceso refrescado exitosamente",
            "schema": {
              "$ref": "#/definitions/TokenRefresh"
            }
          }
        },
        "tags": [
          "token"
        ]
      }
    },
    "/user/register/": {
      "post": {
        "operationId": "user_register_create",
        "description": "Registra un nuevo usuario",
        "parameters": [
          {
            "name": "data",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Usuario registrado con éxito",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        },
        "tags": [
          "user"
        ]
      }
    }
  },
  "definitions": {
    "Note": {
      "required": [
        "title",
        "content"
      ],
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "readOnly": true
        },
        "title": {
          "type": "string",
          "maxLength": 100,
          "minLength": 1
        },
        "content": {
          "type": "string",
          "minLength": 1
        },
        "created_at": {
          "type": "string",
          "format": "date-time",
          "readOnly": true
        },
        "updated_at": {
          "type": "string",
          "format": "date",
          "readOnly": true
        },
        "author": {
          "type": "integer",
          "readOnly": true
        }
      }
    },
    "TokenObtainPair": {
      "required": [
        "username",
        "password"
      ],
      "type": "object",
      "properties": {
        "username": {
          "type": "string",
          "minLength": 1
        },
        "password": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "TokenRefresh": {
      "required": [
        "refresh"
      ],
      "type": "object",
      "properties": {
        "refresh": {
          "type": "string",
          "minLength": 1
        },
        "access": {
          "type": "string",
          "readOnly": true
        }
      }
    },
    "User": {
      "required": [
        "username",
        "password"
      ],
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "readOnly": true
        },
        "username": {
          "type": "string",
          "pattern": "^[\\w.@+-]+$",
          "maxLength": 150,
          "minLength": 1
        },
        "password": {
          "type": "string",
          "maxLength": 128,
          "minLength": 1
        }
      }
    }
  }
}
